<user-mapping>
  
    <authorize username="guacadmin" password="guacadmin">
        <connection name="Google Chrome">
            <protocol>vnc</protocol>
            <param name="hostname">chrome</param>
            <param name="port">5900</param>
            <param name="password">secret</param>
            <param name="clipboard-encoding">UTF-8</param>
        </connection>

        <connection name="Mozilla Firefox">
            <protocol>vnc</protocol>
            <param name="hostname">firefox</param>
            <param name="port">5900</param>
            <param name="password">secret</param>
            <param name="clipboard-encoding">UTF-8</param>
        </connection>
    </authorize>

</user-mapping>
